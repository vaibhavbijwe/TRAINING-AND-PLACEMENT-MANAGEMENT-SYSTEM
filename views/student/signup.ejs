<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>
        .signup {
            margin: auto;
            width: 100%;
            padding: 70px;
            padding-left:10%;
        }
    </style>
  </head>
    <title>signup</title>
  </head>
  <body>
    <h1 style="text-align:center">Sign up</h1>
    <div class="signup">
        <div class="container"style="width: 30rem;">
        <div class="card " style="width: 25rem;">            
            <div class="card-header">sign up Form</div>    
            <div class="card-body">
                <form action="/user/signup" enctype="multipart/form-data" method="POST">
                    <div class="mb-3">
                        <label for="name-reg" class="form-label">Frist Name</label>
                        <input type="text" class="form-control"  placeholder="Fristname" name="fristname" required>                        
                    </div>
                    <div class="mb-3">
                        <label for="name-reg" class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Lasttname" name="lastname"required>                        
                    </div>
                    <div class="mb-3">
                        <label for="email-reg" class="form-label">Email</label>
                        <input type="email" class="form-control" placeholder="Email" name="email" required>                        
                    </div>
                    <div class="mb-3">
                        <label for="password-reg" class="form-label">Password</label>
                        <input type="password" class="form-control" placeholder="*****" name="password"required>
                    </div>
                    <div class="mb-3">
                        <label for="phonenum" class="form-label">Phone Number</label>
                        <input type="text" class="form-control"  placeholder="mobile" name="mobile"required>
                    </div>
                        <div class="mb-3">
                        <label for="Profile" class="form-label" required>Profile Pic</label>
                        <input type="file" name="image">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                        <a href="/">
                        <button type="button" class="btn btn-link">back</button></a>
                   
                </form>
                <% 
            if(typeof message !== "undefined"){
                %>
                <p style="color:blue;"> <%= message %> </p>
                <%
            }
        
        %>
            </div>
        </div>
    </div>
     
        </div>

       
        
  </body>
</html>